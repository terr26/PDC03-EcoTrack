<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoTrack.RecordEmissionPage">

    <ScrollView>
        <StackLayout Padding="20">
            <!-- Action Code is auto-generated -->
            <Entry x:Name="actionCodeEntry" Placeholder="Action Code" IsEnabled="False" />
            <Entry x:Name="descriptionEntry" Placeholder="Description" />

            <!-- Picker for Category -->
            <Picker x:Name="categoryPicker" Title="Category">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Walking</x:String>
                        <x:String>Public Transport</x:String>
                        <x:String>Carpooling</x:String>
                        <x:String>Electric Vehicles</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Picker for Frequency -->
            <Picker x:Name="frequencyPicker" Title="Frequency">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Daily</x:String>
                        <x:String>Weekly</x:String>
                        <x:String>Monthly</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Entry x:Name="impactLevelEntry" Placeholder="Impact Level" />
            <Button Text="Save" Clicked="OnSaveButtonClicked" />

            <!-- Display the saved input values below the save button -->
            <StackLayout x:Name="savedInputsLayout" Padding="20" />
        </StackLayout>
    </ScrollView>

</ContentPage>